@{
}
@model IEnumerable<Instructor>
<h1>Instructor List</h1>

<table class="table table-dark">
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>IsTenured</th>
        <th>Rank</th>
        <th>Hiring Date</th>
        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>

    @foreach (var Instructor in Model)
    {
        <tr>
            <td>@Instructor.Id</td>
            <td>@Instructor.InstructorFirstName</td>
            <td>@Instructor.InstructorLastName</td>
            <td>@Instructor.InstructorIsTenured</td>
            <td>@Instructor.Rank</td>
            <td>@Instructor.DateHired</td>
            <td><a asp-action="ShowDetail" asp-route-id="@Instructor.Id" class="btn btn-primary">Show Details</a></td>
            <td><a asp-action="UpdateInstructor" asp-route-id="@Instructor.Id" class="btn btn-primary">Update</a></td>
            <td><a asp-action="Delete" asp-route-id="@Instructor.Id" class="btn btn-danger">Delete</a></td>
        </tr>
    }
</table>
<br />
<a asp-action="AddInstructor" class="btn btn-primary">Add Instructor</a>
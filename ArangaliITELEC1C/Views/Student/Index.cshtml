@{
}

<table class="table table-dark">
    <tr>
        <h1>Student List</h1>
    </tr>
    <tr>
        <th>Name</th>
        <th>Course</th>
        <th>Admission Date</th>
        <th>Email</th>
        <th>GPA</th>
        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>

    </tr>



    @foreach (var student in Model)
    {
        <tr>
            <td>@student.StudentLastName, @student.StudentFirstName</td>
            <td>@student.Course</td>
            <td>@student.AdmissionDate</td>
            <td>@student.Email</td>
            <td>@student.GPA</td>
            <td><a asp-action="ShowDetail" asp-route-id="@student.StudentId" class="btn btn-primary">Show Details</a></td>
            <td><a asp-action="UpdateStudent" asp-route-id="@student.StudentId" class="btn btn-primary">Update</a></td>
            <td><a asp-action="Delete" asp-route-id="@student.StudentId" class="btn btn-danger">Delete</a></td>
        </tr>
    }

</table><br />
        <a asp-action="AddStudent" class="btn btn-primary">Add Student</a>